generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  password      String?
  teams         Team[]         @relation("TeamMembers")
  notifications Notification[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Team {
  id        String   @id @default(cuid())
  teamName  String
  eventName String // Store event name for easy querying
  leaderId  String // Reference to the team leader's user ID
  members   User[]   @relation("TeamMembers")
  maxSize   Int      @default(4)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([eventName, leaderId]) // A leader can't create multiple teams for same event
}

model Notification {
  id        String   @id @default(cuid())
  email     String
  title     String
  message   String
  read      Boolean  @default(false)
  type      String // e.g., "TEAM_INVITE", "TEAM_UPDATE"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [email], references: [email], onDelete: Cascade)

  @@index([email, read]) // Index for fetching unread notifications
}
